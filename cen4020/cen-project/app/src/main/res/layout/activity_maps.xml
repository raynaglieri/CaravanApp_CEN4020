<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/caravanAccent">

    <fragment xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:map="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        tools:context="edu.fsu.cen4020.cen_project.MapsActivity" />

    <ImageButton
        android:id="@+id/gasButton"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/map"
        android:backgroundTint="@android:color/holo_orange_light"
        android:src="@drawable/gas" />

    <ImageButton
        android:id="@+id/foodButton"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_below="@+id/map"
        android:layout_centerHorizontal="true"
        android:backgroundTint="@android:color/holo_orange_light"
        android:src="@drawable/food" />

    <ImageButton
        android:id="@+id/reststopButton"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/map"
        android:backgroundTint="@android:color/holo_orange_light"
        android:src="@drawable/stop" />

    <Button
        android:id="@+id/leaveJourney"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/endJourney"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:backgroundTint="@color/colorAccent2Caravan"
        android:text="Leave Journey" />

    <Button
        android:id="@+id/endJourney"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/leaveJourney"
        android:layout_alignLeft="@+id/leaveJourney"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/leaveJourney"
        android:layout_alignStart="@+id/leaveJourney"
        android:backgroundTint="@color/colorAccent2Caravan"
        android:text="End Journey" />


</RelativeLayout>