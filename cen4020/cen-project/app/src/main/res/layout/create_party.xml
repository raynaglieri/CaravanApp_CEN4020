<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1">

    <TextView
        android:id="@+id/viewPartyName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/group_name"
        android:textColor="@color/colorAccent"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/partyName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Party Name"
        android:inputType="textPersonName" />

    <TextView
        android:id="@+id/viewPartyPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Desired party password:"
        android:textColor="@color/colorAccent"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/partyPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Password"
        android:inputType="textPersonName" />

    <TextView
        android:id="@+id/viewTravelType"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/select_type"
        android:textColor="@color/colorAccent"
        android:textStyle="bold" />

    <Spinner
        android:id="@+id/travelSpinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.05"
        android:entries="@array/travel_options" />

    <TextView
        android:id="@+id/viewStartLocation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Start Location:"
        android:textColor="@color/colorAccent"
        android:textStyle="bold" />

    <Button
        android:id="@+id/startLocationButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/darker_gray"
        android:text="Select Start" />

    <TextView
        android:id="@+id/viewDestination"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Destination:"
        android:textColor="@color/colorAccent"
        android:textStyle="bold" />

    <Button
        android:id="@+id/stopLocationButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/darker_gray"
        android:text="Select Stop" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="21dp" />

    <Button
        android:id="@+id/createGroupBtn"
        android:layout_width="match_parent"
        android:layout_height="78dp"
        android:background="@color/colorAccent"
        android:onClick="createParty"
        android:text="Create Party" />

</LinearLayout>